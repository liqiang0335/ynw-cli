{
  // See https://go.microsoft.com/fwlink/?LinkId=759670
  // for the documentation about the jsconfig.json format
  "compilerOptions": {
    "target": "esnext",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "paths": {
      "@store/*": ["./app/store/*"],
      "@comps/*": ["./app/component/*"],
      "@script/*": ["./app/script/*"],
      "@const/*": ["./app/constant/*"],
      "@hook/*": ["./app/hook/*"]
    }
  },
  "exclude": ["dist", "node_modules"]
}
